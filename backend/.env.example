# Скопируйте в .env и заполните. В продакшене обязательно задайте SECRET_KEY и ALLOWED_HOSTS.

# Django
DJANGO_SECRET_KEY=your-secret-key-min-50-chars
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=kchrmarket.ru,www.kchrmarket.ru,api.kchrmarket.ru

# CORS (разрешённые источники для запросов к API, через запятую)
CORS_ALLOWED_ORIGINS=https://kchrmarket.ru,https://www.kchrmarket.ru

# База: PostgreSQL (по умолчанию) или SQLite
USE_SQLITE=false
POSTGRES_DB=sklad
POSTGRES_USER=sklad
POSTGRES_PASSWORD=your-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
